<style>
body {
  background-color: lightblue;
  
}

h1 {
  vertical-align: top;
	background-color: #D9E7F8;
	color: #000080;
	font-weight: 600;
	margin-top: 5px;
	margin-left: 20px;
	border-radius: 5px;
	display: inline-block;
	padding: 15px 25px;
}
}
ul {
    list-style-type: circle;
    color:blue;
    font-family: New Century Schoolbook, TeX Gyre Schola, serif;
    left-margin: 50px;
  }
.btn{
  background-color: #008CBA;
  border: white;
  color: white;
  margin-left: 20px;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
}
.btn {
  transition-duration: 0.4s;
}

.btn:hover {
  background-color: #4CAF50; /* Green */
  color: white;
}

</style>
<h1> Courses Index </h1>

<%= button_to "Add New Course", new_course_path, method: :get, class:'btn'  %>
<ul>
    <%= @courses.each do |course| %>
       <li><strong><%= link_to course.name, course_path(course)%></strong></li>
    <%end%>

</ul>