<h1> Students Index </h1>

<%= button_to "Add New Student", new_student_path, method: :get, class:'btn'  %>
<ul>
    <%= @students.each do |student| %>
       <li><strong><%= link_to student.name, student_path(student)%></strong></li>
    <%end%>

</ul>

